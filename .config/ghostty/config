# SPLITS
#unfocused-split-fill = RRGGBB
#split-divider-color = RRGGBB

# Create Splits
keybind = ctrl+alt+\=new_split:right
keybind = ctrl+alt+-=new_split:down

# navigate to Splits
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right

# resize Splits
keybind = shift+alt+h=resize_split:left,10
keybind = shift+alt+j=resize_split:down,10
keybind = shift+alt+k=resize_split:up,10
keybind = shift+alt+l=resize_split:right,10

# equalize all Splits
keybind = ctrl+alt+e=equalize_splits



